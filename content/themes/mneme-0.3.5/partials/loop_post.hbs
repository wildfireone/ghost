<div class="col-xs-12 col-sm-6 col-md-4 grid-item loading">
	<div class="thumbnail">
		<div class="image-wrapper">
			{{#if image}}
			<img src="{{image}}" alt="thumbnail" />
			{{else}}
			<img src="{{asset "images/empty.png"}}" alt="thumbnail" style="height: 0px;" />
			{{/if}}
		</div>
		<div class="caption">
			<h3>{{{title}}}</h3>
			<img src="{{image}}" alt="thumbnail" />
			<p>{{excerpt characters="70"}}â€¦</p>
			<a href="{{url}}" class="btn btn-default btn-xs" role="button">Read more</a>
			<time>On {{date}}</time>
		</div>
	</div>
</div>
