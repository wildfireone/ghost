{{!< default}}
{{#post}}
<article class="{{post_class}}">

    <div class="container limit-width">
        <div class="page-header">
            <h1>{{title}}</h1>
            By {{author}} On <time>{{date}}</time>
        </div>

		<div class="content">
			{{content}}
		</div>

		<div class="post-bottom-info">
			<div class="tags">
				{{#foreach tags}}
				<a href="{{url}}" class="label label-info">{{name}}</a>
				{{/foreach}}
			</div>

			<!-- Share post -->
			{{> addons/share}}
		</div>
    </div>
</article>

{{> prev_next_post}}

<!-- Comments -->
{{!> addons/comment}}

{{/post}}
